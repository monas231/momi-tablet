<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GoldTextView" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/round_sunflower_18</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">21sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
    </style>

    <style name="DefaultImageView" parent="Widget.AppCompat.ImageButton">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>